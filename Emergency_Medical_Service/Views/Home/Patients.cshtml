@model IEnumerable<EMS.Lib.Models.PatientModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div>
    <div class="d-flex justify-content-center">
        <a href="/Home/AddPatient" style="margin-right: 1%; text-decoration: none; font-size: 22px; color: #08b9f4; font-weight: bold">New</a>
        <a href="#" id="printButton" style="margin-left: 1%; text-decoration: none; font-size: 22px; color: darkgrey; font-weight: bold">Print</a>
    </div>
    <table>
        <tr>
            <th>Patient ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Sex</th>
            <th>Birthday</th>
            <th>Phone Number</th>
            <th>Street</th>
            <th>Postal</th>
        </tr>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientId</td>
                <td>@patient.Name</td>
                <td>@patient.Surname</td>
                <td>@patient.Sex</td>
                <td>@patient.Birthday</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.Street</td>
                <td>@patient.Postal</td>
                <td>
                    <form asp-action="DeletePatient"><a href="/Home/DeletePatient?patientId=@patient.PatientId" style="text-decoration: none; color: #ff0050;">Delete</a></form></td>
                <td>
                    <form asp-action="EditPatient"><a href="/Home/EditPatient?id=@patient.PatientId" style="text-decoration: none; color: #08b9f4">Edit</a></form></td>
            </tr>
        }
    </table>
</div>


<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      font-weight: 600;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>

<script>
    document.getElementById('printButton').addEventListener('click', function () {
        window.print();
    });
</script>
