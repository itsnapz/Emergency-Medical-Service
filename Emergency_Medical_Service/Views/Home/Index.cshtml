@model EMS.Lib.Models.LoginModel

@{
    ViewData["Title"] = "Home Page";
}



<div style="display: flex; justify-content: center;">
    <form asp-action="Index" style="display: flex; align-items: center">
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="E-mail" asp-for="Email"/>
        </div>
        <div class="input-group form-group">
            <input type="password" class="form-control" placeholder="password" asp-for="Password" style="margin-top: 5%"/>
        </div>
        <div class="form-group" style="justify-content: center; display: flex; margin-top: 5%">
            <input type="submit" value="Login" class="login_btn">
        </div>
    </form>
</div>
