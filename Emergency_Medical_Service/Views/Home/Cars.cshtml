@model IEnumerable<EMS.Lib.Models.CarModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div>
    <div class="d-flex justify-content-center">
        <a href="/Home/AddDoctor" style="margin-right: 1%; text-decoration: none; font-size: 22px; color: #08b9f4; font-weight: bold">New</a>
        <a href="#" id="printButton" style="margin-left: 1%; text-decoration: none; font-size: 22px; color: darkgrey; font-weight: bold">Print</a>
    </div>
    <a href="/Home/AddCar">Add</a>
    <table>
        <tr>
            <th>Car ID</th>
            <th>Name</th>
            <th>Plate</th>
        </tr>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarId</td>
                <td>@car.Name</td>
                <td>@car.Plate</td>
                <td>
                    <form asp-action="DeleteCar"><a href="/Home/DeleteCar?carId=@car.CarId" style="text-decoration: none; color: #ff0050;">Delete</a></form></td>
                <td>
                    <form asp-action="EditCar"><a href="/Home/EditCar?id=@car.CarId" style="text-decoration: none; color: #08b9f4">Edit</a></form></td>
            </tr>
        }
    </table>
</div>


<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      font-weight: 600;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>

<script>
    document.getElementById('printButton').addEventListener('click', function () {
        window.print();
    });
</script>
