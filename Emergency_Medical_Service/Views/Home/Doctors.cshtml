@model IEnumerable<EMS.Lib.Models.DoctorModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div>
    <div class="d-flex justify-content-center">
        <a href="/Home/AddDoctor" style="margin-right: 1%; text-decoration: none; font-size: 22px; color: #08b9f4; font-weight: bold">New</a>
        <a href="#" id="printButton" style="margin-left: 1%; text-decoration: none; font-size: 22px; color: darkgrey; font-weight: bold">Print</a>
    </div>
    <table>
        <tr>
            <th>Doctor ID</th>
            <th>Hospital</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Rank</th>
            <th>Birthday</th>
            <th>Phone Number</th>
            <th>Call Sign</th>
        </tr>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.DoctorId</td>
                <td>@doctor.HospitalModel.Name</td>
                <td>@doctor.Name</td>
                <td>@doctor.Surname</td>
                <td>@doctor.Rank</td>
                <td>@doctor.Birthday</td>
                <td>@doctor.PhoneNumber</td>
                <td>@doctor.CallSign</td>
                <td>
                    <form asp-action="DeleteDoctor"><a href="/Home/DeleteDoctor?doctorId=@doctor.DoctorId" style="text-decoration: none; color: #ff0050;">Delete</a></form></td>
                <td>
                    <form asp-action="EditDoctor"><a href="/Home/EditDoctor?id=@doctor.DoctorId" style="text-decoration: none; color: #08b9f4">Edit</a></form></td>
            </tr>
        }
    </table>
</div>


<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      font-weight: 600;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>

<script>
    document.getElementById('printButton').addEventListener('click', function () {
        window.print();
    });
</script>
